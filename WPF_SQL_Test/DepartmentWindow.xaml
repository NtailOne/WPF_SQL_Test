<Window x:Class="WPF_SQL_Test.DepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SQL_Test"
        mc:Ignorable="d"
        Title="DepartmentWindow" Height="180" Width="300">
    <Grid>
        <Label x:Name="label" Content="Название подразделения" Margin="25,16,25,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="departmentNameBox" Margin="25,47,25,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="button" Content="Добавить" Margin="40,85,40,0" VerticalAlignment="Top" Width="200" Height="36" Click="button_Click" FontWeight="Bold"/>
    </Grid>
</Window>
