<Window x:Class="WPF_SQL_Test.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SQL_Test"
        mc:Ignorable="d"
        Title="EmployeeWindow" Width="280" Height="330" MinWidth="280" MinHeight="330">
    <Grid>
        <Label x:Name="label" Content="Фамилия" Margin="25,16,25,0" VerticalAlignment="Top" Width="200"/>
        <Label x:Name="label_Копировать" Content="Имя" Margin="25,82,25,0" VerticalAlignment="Top" Width="200"/>
        <Label x:Name="label_Копировать1" Content="Подразделение" Margin="25,147,25,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="lastNameBox" Margin="25,47,25,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="firstNameBox" Margin="25,113,25,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <ComboBox x:Name="departmentComboBox" SelectedItem="{Binding department}" DisplayMemberPath="depName" VerticalAlignment="Top" Width="200" Margin="25,178,25,0" />
        <Button x:Name="button" Content="Добавить" Margin="0,221,0,0" VerticalAlignment="Top" Width="200" Height="36" Click="button_Click" FontWeight="Bold"/>
    </Grid>
</Window>
